<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.ResumoPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Resumo do Evento"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label x:Name="lblNome" FontSize="18"/>
            <Label x:Name="lblDatas" />
            <Label x:Name="lblDuracao" />
            <Label x:Name="lblParticipantes" />
            <Label x:Name="lblLocal" />
            <Label x:Name="lblCusto" FontAttributes="Bold" FontSize="16"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
